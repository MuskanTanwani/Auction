<div class = "d-flex justify-content-center">
    <h1> Latest Bids </h1>
</div>
<table class="table table-bordered">
  <thead>
    <tr>
    <th>Product Name</th>
    <th>Latest Price</th>
    <th>Ending Time</th>
    <th>Description</th>
    <th>Quantity</th>
    <th>Status</th>
    <th>Make a Bid</th>
    </tr>
  </thead>
  <tbody>
    <%@bids.each do |bid| %>
      <tr>
        <td><%= bid.status %></td>
        <td><%= bid.current_bid %></td>
        <td><%= bid.time %></td>
        <td><%= bid.product.description %></td>
        <td><%= bid.product.quantity %></td>
        <td><%= bid.status %></td>
      </tr>
    <%end%>
  </tbody>
</table>
