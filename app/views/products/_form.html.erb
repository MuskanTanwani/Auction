<%= form_with model:product do |form|%>
<div class ="row">
  <div class="col-lg-4">
    <div class="form-group">
    <%=form.label:product_name,class:'mb-2'%>
    <%=form.text_field:name,class:'form-control form-control-lg'%>
    <%@product.errors.full_messages_for(:name).each do |message| %>
    <p class="text-danger"><%=message%></p>
    <%end%>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="form-group">
    <%=form.label:your_name,class:'mb-2'%>
    <%=form.text_field:your_name,class:'form-control form-control-lg'%>
    <%@product.errors.full_messages_for(:your_name).each do |message| %>
    <p class="text-danger"><%=message%></p>
    <%end%>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="form-group">
    <%=form.label:your_company_name,class:'mb-2'%>
    <%=form.text_field:comapny_name,class:'form-control form-control-lg'%>
    <%@product.errors.full_messages_for(:comapny_name).each do |message| %>
    <p class="text-danger"><%=message%></p>
    <%end%>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="form-group">
    <%=form.label:image,class:'mb-2'%>
    <%=form.file_field:image,class:'form-control form-control-lg'%>
    <%@product.errors.full_messages_for(:comapny_name).each do |message| %>
    <p class="text-danger"><%=message%></p>
    <%end%>
    </div>
  </div>
  <div class="col-lg-4">
    <div class="form-group">
    <%=form.label:starting_bid,class:'mb-2'%>
    <%=form.text_field:starting_bid,class:'form-control form-control-lg'%>
    <%@product.errors.full_messages_for(:starting_bid).each do |message| %>
